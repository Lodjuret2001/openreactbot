{
  "compilerOptions": {
    "outDir": "build",
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2020",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es6", "es2015", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": false,
  },
  "exclude": ["webpack.config.cjs"]
}
